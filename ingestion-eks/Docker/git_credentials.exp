#!/usr/bin/expect -f

set timeout 10

set USERNAME [lindex $argv 0]
set PASSWORD [lindex $argv 1]

spawn pip install -e git+https://bitbucket.org/experience-com/buyersroad-sdk-python.git#egg=buyersroad

expect "Username for 'https://bitbucket.org':"
send -- "$USERNAME\r"

expect "Password for 'https://$USERNAME@bitbucket.org': "
send -- "$PASSWORD\r"

expect eof